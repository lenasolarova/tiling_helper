<?xml version="1.0" encoding="UTF-8"?>
<interface domain="tiling_helper@helping_tiler">

    <object class="AdwPreferencesPage" id="keybinding">
        <property name="title" translatable="yes" comments="Translators: This is the name of a tab in the prefs window">Keybinding</property>
        <property name="icon-name">edit-copy-symbolic</property>
        <child>
            <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes" comments="Translators: This is the header for a preference group in the 'keybinding' tab">Monitor One</property>
                <child>
                    <object class="AdwComboRow" id="select-one">
                        <property name="title" translatable="yes" comments="Translators: Does stuff">Select tiling</property>
                        <property name="model">
                            <object class="GtkStringList">
                              <items>
                                <item translatable="yes">Halves</item>
                                <item translatable="yes">Thirds</item>
                                <item translatable="yes">Quarters</item>
                                <item translatable="yes">Sixths</item>
                              </items>
                            </object>
                          </property>
                    </object>
                </child>
            </object>
        </child>

        <child> 
            <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes" comments="Translators: This is the header for a preference group in the 'keybinding' tab">Monitor Two</property>

                <child>
                    <object class="AdwComboRow" id="select-two">
                        <property name="title" translatable="yes" comments="Translators: Does stuff">Select tiling</property>
                        <property name="model">
                            <object class="GtkStringList">
                              <items>
                                <item translatable="yes">Halves</item>
                                <item translatable="yes">Thirds</item>
                                <item translatable="yes">Quarters</item>
                                <item translatable="yes">Sixths</item>
                              </items>
                            </object>
                          </property>
                    </object>
                </child>
            </object>
        </child> 
    </object>

    <object class="AdwPreferencesPage" id="in-progress">
        <property name="title" translatable="yes" comments="Translators: This is the name of a tab in the prefs window">In Progress</property>
        <property name="icon-name">format-justify-fill-symbolic</property>
        <child>
            <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes" comments="Translators: This is the header for a preference group in the 'in progress' tab">Being worked on</property>
                <child>
                    <object class="AdwSpinRow" id="nothing-yet">
                        <property name="title" translatable="yes" comments="Translators: nothing_yet it does">Stuff</property>
                        <property name="adjustment">
                            <object class="GtkAdjustment">
                                <property name="value">2</property>
                                <property name="lower">0</property>
                                <property name="upper">100</property>
                                <property name="step-increment">1</property>
                            </object>
                        </property>
                    </object>
                </child>
            </object>
        </child> 
    </object>
</interface>